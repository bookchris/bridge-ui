{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    //"eslint:recommended",
    "plugin:prettier/recommended"
    //"google",
    //"plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": ["tsconfig.json"],
    "sourceType": "module"
  },
  "ignorePatterns": ["/lib/**/*"],
  "rules": {
    "prettier/prettier": "warn",
    "react/react-in-jsx-scope": "off"
  },
  "plugins": ["@typescript-eslint", "import"]
}
